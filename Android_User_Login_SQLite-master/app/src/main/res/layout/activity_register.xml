<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerName"
        android:layout_centerHorizontal="true"
        android:hint="Type User Name"
        android:layout_marginTop="46dp"
        android:width="230dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerPassword"
        android:layout_below="@+id/registerName"
        android:layout_centerHorizontal="true"
        android:hint="Type Your Password"
        android:layout_marginTop="26dp"
        android:width="230dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerPasswordSecond"
        android:layout_below="@+id/registerPassword"
        android:layout_centerHorizontal="true"
        android:hint="Type Your Password Again"
        android:layout_marginTop="26dp"
        android:width="230dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerAdd"
        android:text="ADD"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/registerPasswordSecond"
        android:layout_marginTop="26dp"/>


</RelativeLayout>